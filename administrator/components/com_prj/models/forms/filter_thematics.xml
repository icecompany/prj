<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field
                name="search"
                type="text"
                label="COM_PRJ_FILTER_THEMATICS"
                description="COM_PRJ_FILTER_THEMATICS"
                hint="COM_PRJ_FILTER_THEMATICS"
                autocomplete="off"
                class="js-stools-search-string"
        />
        <field
                name="for_contractor"
                type="list"
                label="COM_PRJ_FILTER_SELECT_FOR_CONTRACTOR"
                description="COM_PRJ_FILTER_SELECT_FOR_CONTRACTOR"
                onchange="this.form.submit();"
        >
            <option value="">COM_PRJ_FILTER_SELECT_FOR_CONTRACTOR</option>
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field
                name="for_ndp"
                type="list"
                label="COM_PRJ_FILTER_SELECT_FOR_NDP"
                description="COM_PRJ_FILTER_SELECT_FOR_NDP"
                onchange="this.form.submit();"
        >
            <option value="">COM_PRJ_FILTER_SELECT_FOR_NDP</option>
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
    </fields>
    <fields name="list">
        <field
                name="fullordering"
                type="list"
                label="COM_COMPANIES_FILTER_SELECT_FULL_ORDERING"
                description="COM_COMPANIES_FILTER_SELECT_FULL_ORDERING_DESC"
                onchange="this.form.submit();"
                default="title asc"
        >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="t.title ASC">COM_PRJ_SORTING_THEMATICS_TITLE_ASC</option>
            <option value="t.title DESC">COM_PRJ_SORTING_THEMATICS_TITLE_DESC</option>
            <option value="t.for_contractor ASC">COM_PRJ_SORTING_THEMATICS_FOR_CONTRACTOR_ASC</option>
            <option value="t.for_contractor DESC">COM_PRJ_SORTING_THEMATICS_FOR_CONTRACTOR_DESC</option>
            <option value="t.for_ndp ASC">COM_PRJ_SORTING_THEMATICS_FOR_NDP_ASC</option>
            <option value="t.for_ndp DESC">COM_PRJ_SORTING_THEMATICS_FOR_NDP_DESC</option>
            <option value="t.weight ASC">COM_PRJ_SORTING_THEMATICS_WEIGHT_ASC</option>
            <option value="t.weight DESC">COM_PRJ_SORTING_THEMATICS_WEIGHT_DESC</option>
            <option value="t.id ASC">COM_PRJ_SORTING_THEMATICS_ID_ASC</option>
            <option value="t.id DESC">COM_PRJ_SORTING_THEMATICS_ID_DESC</option>
        </field>
        <field
                name="limit"
                type="limitbox"
                class="input-mini"
                default="0"
                label="COM_PRJ_FILTER_LIMIT"
                description="COM_PRJ_FILTER_LIMIT_DESC"
                onchange="this.form.submit();"
        />
    </fields>
</form>