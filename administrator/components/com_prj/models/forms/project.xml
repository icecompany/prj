<?xml version="1.0" encoding="utf-8"?>
<form addrulepath="/administrator/components/com_prj/models/rules">
    <fieldset name="general">
        <field
                name="id"
                type="hidden"
        />
        <field
                name="familyID"
                type="Family"
                label="COM_PRJ_FORM_PROJECT_FAMILY_LABEL"
                description="COM_PRJ_FORM_PROJECT_FAMILY_DESC"
                class="span12"
                >
            <option value=""></option>
        </field>
        <field
                name="title"
                type="text"
                label="COM_PRJ_FORM_PROJECT_TITLE_LABEL"
                description="COM_PRJ_FORM_PROJECT_TITLE_DESC"
                hint="COM_PRJ_FORM_PROJECT_TITLE_HINT"
                message="COM_PRJ_FORM_PROJECT_TITLE_MESSAGE"
                autocomplete="off"
                required="true"
                validate="project"
                maxlength="255"
                class="span12"
        />
        <field
                name="title_en"
                type="text"
                label="COM_PRJ_FORM_PROJECT_TITLE_EN_LABEL"
                description="COM_PRJ_FORM_PROJECT_TITLE_EN_DESC"
                hint="COM_PRJ_FORM_PROJECT_TITLE_EN_HINT"
                message="COM_PRJ_FORM_PROJECT_TITLE_EN_MESSAGE"
                autocomplete="off"
                validate="project"
                maxlength="255"
                class="span12"
        />
        <field
                name="managerID"
                type="Director"
                class="span12"
                label="COM_PRJ_FORM_PROJECT_MANAGER_LABEL"
                description="COM_PRJ_FORM_PROJECT_MANAGER_DESC"
                filter="integer"
        />
        <field
                name="date_start"
                type="calendar"
                label="COM_PRJ_FORM_PROJECT_DATE_START_LABEL"
                description="COM_PRJ_FORM_PROJECT_DATE_START_DESC"
                format="%d.%m.%Y"
                filter="none"
                required="true"
        />
        <field
                name="date_end"
                type="calendar"
                label="COM_PRJ_FORM_PROJECT_DATE_END_LABEL"
                description="COM_PRJ_FORM_PROJECT_DATE_END_DESC"
                format="%d.%m.%Y"
                filter="none"
                required="true"
        />
        <field
                name="prefix"
                type="text"
                label="COM_PRJ_FORM_PROJECT_PREFIX_LABEL"
                description="COM_PRJ_FORM_PROJECT_PREFIX_DESC"
                hint="COM_PRJ_FORM_PROJECT_PREFIX_HINT"
                message="COM_PRJ_FORM_PROJECT_PREFIX_MESSAGE"
                validate="prefix"
                maxlength="15"
                class="span12"
        />
    </fieldset>
    <fieldset name="advanced">
        <field
                name="groupID"
                type="usergroup"
                label="COM_PRJ_FORM_PROJECT_GROUP_LABEL"
                description="COM_PRJ_FORM_PROJECT_GROUP_DESC"
                class="span12"
        />
        <field
                name="priceID"
                type="Price"
                label="COM_PRJ_FORM_PROJECT_PRICE_LABEL"
                description="COM_PRJ_FORM_PROJECT_PRICE_DESC"
                filter="integer"
                class="span12"
        />
        <field
                name="catalogID"
                type="Catalog"
                label="COM_PRJ_FORM_PROJECT_CATALOG_LABEL"
                description="COM_PRJ_FORM_PROJECT_CATALOG_DESC"
                filter="integer"
                class="span12"
        />
        <field
                name="columnID"
                type="integer"
                label="COM_PRJ_FORM_PROJECT_COLUMN_LABEL"
                description="COM_PRJ_FORM_PROJECT_COLUMN_DESC"
                first="1"
                last="3"
                step="1"
                class="span12"
                required="true"
                filter="integer"
                default="1"
        />
        <field
                name="show_in_thematics"
                type="radio"
                required="true"
                label="COM_PRJ_FORM_PROJECT_IN_THEMATICS_LABEL"
                description="COM_PRJ_FORM_PROJECT_IN_THEMATICS_DESC"
                filter="integer"
                class="btn-group btn-group-yesno"
                default="1"
        >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field
                name="is_archive"
                type="radio"
                required="true"
                label="COM_PRJ_FORM_PROJECT_IS_ARCHIVE_LABEL"
                description="COM_PRJ_FORM_PROJECT_IS_ARCHIVE_DESC"
                filter="integer"
                class="btn-group btn-group-yesno"
                default="0"
        >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field
                name="course_usd"
                type="text"
                label="COM_PRJ_FORM_PROJECT_COURSE_USD_LABEL"
                description="COM_PRJ_FORM_PROJECT_COURSE_USD_DESC"
                filter="float"
                class="span12"
        />
        <field
                name="course_eur"
                type="text"
                label="COM_PRJ_FORM_PROJECT_COURSE_EUR_LABEL"
                description="COM_PRJ_FORM_PROJECT_COURSE_EUR_DESC"
                filter="float"
                class="span12"
        />
    </fieldset>
</form>