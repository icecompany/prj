<?xml version="1.0" encoding="utf-8"?>
<form addrulepath="/administrator/components/com_prj/models/rules">
    <fieldset name="general">
        <field
                name="id"
                type="hidden"
        />
        <field
                name="title"
                type="text"
                label="COM_PRJ_FORM_PROJECT_TITLE_LABEL"
                description="COM_PRJ_FORM_PROJECT_TITLE_DESC"
                hint="COM_PRJ_FORM_PROJECT_TITLE_HINT"
                message="COM_PRJ_FORM_PROJECT_TITLE_MESSAGE"
                autocomplete="off"
                required="true"
                validate="project"
                maxlength="255"
                class="span12"
        />
        <field
                name="title_en"
                type="text"
                label="COM_PRJ_FORM_PROJECT_TITLE_EN_LABEL"
                description="COM_PRJ_FORM_PROJECT_TITLE_EN_DESC"
                hint="COM_PRJ_FORM_PROJECT_TITLE_EN_HINT"
                message="COM_PRJ_FORM_PROJECT_TITLE_EN_MESSAGE"
                autocomplete="off"
                validate="ptitle"
                maxlength="255"
                class="span12"
        />
        <field
                name="managerID"
                type="user"
                class="span12"
                label="COM_PRJ_FORM_PROJECT_MANAGER_LABEL"
                description="COM_PRJ_FORM_PROJECT_MANAGER_DESC"
                filter="unset"
        />
        <field
                name="groupID"
                type="usergroup"
                label="COM_PRJ_FORM_PROJECT_GROUP_LABEL"
                description="COM_PRJ_FORM_PROJECT_GROUP_DESC"
                class="span12"
        />
        <field
                name="date_start"
                type="calendar"
                label="COM_PRJ_FORM_PROJECT_DATE_START_LABEL"
                description="COM_PRJ_FORM_PROJECT_DATE_START_DESC"
                format="%d.%m.%Y"
                filter="none"
                required="true"
        />
        <field
                name="date_end"
                type="calendar"
                label="COM_PRJ_FORM_PROJECT_DATE_END_LABEL"
                description="COM_PRJ_FORM_PROJECT_DATE_END_DESC"
                format="%d.%m.%Y"
                filter="none"
                required="true"
        />
    </fieldset>
    <fieldset name="advanced">
        <field
                name="prefix"
                type="text"
                label="COM_PRJ_FORM_PROJECT_PREFIX_LABEL"
                description="COM_PRJ_FORM_PROJECT_PREFIX_DESC"
                hint="COM_PRJ_FORM_PROJECT_PREFIX_HINT"
                message="COM_PRJ_FORM_PROJECT_PREFIX_MESSAGE"
                validate="prefix"
                maxlength="15"
        />
    </fieldset>
</form>