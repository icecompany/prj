<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field
                name="search"
                type="text"
                label="COM_PRJ_FILTER_PROJECTS"
                description="COM_PRJ_FILTER_PROJECTS"
                hint="COM_PRJ_FILTER_PROJECTS"
                autocomplete="off"
                class="js-stools-search-string"
        />
    </fields>
    <fields name="list">
        <field
                name="fullordering"
                type="list"
                label="COM_PRJ_FILTER_SELECT_FULL_ORDERING"
                description="COM_PRJ_FILTER_SELECT_FULL_ORDERING_DESC"
                onchange="this.form.submit();"
                default="title asc"
        >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="p.title ASC">COM_PRJ_SORTING_PROJECTS_TITLE_ASC</option>
            <option value="p.title DESC">COM_PRJ_SORTING_PROJECTS_TITLE_DESC</option>
            <option value="manager ASC">COM_PRJ_SORTING_PROJECTS_MANAGER_ASC</option>
            <option value="manager DESC">COM_PRJ_SORTING_PROJECTS_MANAGER_DESC</option>
            <option value="status ASC">COM_PRJ_SORTING_PROJECTS_STATUS_ASC</option>
            <option value="status DESC">COM_PRJ_SORTING_PROJECTS_STATUS_DESC</option>
            <option value="p.date_start ASC">COM_PRJ_SORTING_PROJECTS_DATE_START_ASC</option>
            <option value="p.date_start DESC">COM_PRJ_SORTING_PROJECTS_DATE_START_DESC</option>
            <option value="p.date_end ASC">COM_PRJ_SORTING_PROJECTS_DATE_END_ASC</option>
            <option value="p.date_end DESC">COM_PRJ_SORTING_PROJECTS_DATE_END_DESC</option>
            <option value="p.id ASC">COM_PRJ_SORTING_PROJECTS_ID_ASC</option>
            <option value="p.id DESC">COM_PRJ_SORTING_PROJECTS_ID_DESC</option>
        </field>
        <field
                name="limit"
                type="limitbox"
                class="input-mini"
                default="0"
                label="COM_PRJ_FILTER_LIMIT"
                description="COM_PRJ_FILTER_LIMIT_DESC"
                onchange="this.form.submit();"
        />
    </fields>
</form>