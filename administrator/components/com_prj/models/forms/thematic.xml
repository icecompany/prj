<?xml version="1.0" encoding="utf-8"?>
<form addrulepath="/administrator/components/com_prj/models/rules">
    <fieldset name="general">
        <field
                name="id"
                type="hidden"
        />
        <field
                name="title"
                type="text"
                label="COM_PRJ_FORM_THEMATIC_TITLE_LABEL"
                description="COM_PRJ_FORM_THEMATIC_TITLE_DESC"
                hint="COM_PRJ_FORM_THEMATIC_TITLE_HINT"
                message="COM_PRJ_FORM_THEMATIC_TITLE_MESSAGE"
                autocomplete="off"
                required="true"
                validate="thematic"
                maxlength="255"
                class="span12"
        />
        <field
                name="for_contractor"
                type="radio"
                class="btn-group btn-group-yesno"
                default="0"
                label="COM_PRJ_FORM_THEMATIC_FOR_CONTRACTOR_LABEL"
                description="COM_PRJ_FORM_THEMATIC_FOR_CONTRACTOR_DESC"
                required="true"
                filter="bool"
        >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field
                name="for_ndp"
                type="radio"
                class="btn-group btn-group-yesno"
                default="0"
                label="COM_PRJ_FORM_THEMATIC_FOR_NDP_LABEL"
                description="COM_PRJ_FORM_THEMATIC_FOR_NDP_DESC"
                required="true"
                filter="bool"
        >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field
                name="weight"
                type="integer"
                label="COM_PRJ_FORM_THEMATIC_WEIGHT_LABEL"
                description="COM_PRJ_FORM_THEMATIC_WEIGHT_DESC"
                hint="COM_PRJ_FORM_THEMATIC_WEIGHT_HINT"
                message="COM_PRJ_FORM_THEMATIC_WEIGHT_MESSAGE"
                first="0"
                last="127"
                step="1"
                default="0"
                filter="integer"
        />
    </fieldset>
</form>